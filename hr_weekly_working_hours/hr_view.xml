<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>
    <record model="ir.ui.view" id="hr_contract_view_form">
      <field name="name">hr.contract.view.form.weekly_work_hours</field>
      <field name="model">hr.contract</field>
      <field name="inherit_id" ref="hr_contract.hr_contract_view_form" />
      <field name="arch" type="xml">
        <xpath expr="//page[@name='information']/separator" position="before">
          <group>
            <field name="scheduled_working_hours"/>
            <field name="weekly_working_hours"/>
            <field name="wwh_days_full"/>
            <field name="wwh_days_intermittent"/>
            <field name="working_percent"/>
          </group>
        </xpath>
      </field>
    </record>
  </data>
</odoo>
