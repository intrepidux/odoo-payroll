<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="payroll_driving_record.list_view">
      <field name="name">payroll_driving_record list</field>
      <field name="model">driving.record</field>
      <field name="arch" type="xml">
        <tree string="Driving Record" multi_edit="1" sample="1">
          <field name="employee_id"/>
          <field name="date_start"/>
          <field name="date_stop"/>
          <field name="analytic_account_id"/>
        </tree>
      </field>
    </record>

    
    <record model="ir.ui.view" id="payroll_driving_record.form_view">
      <field name="name">payroll_driving_record form</field>
      <field name="model">driving.record</field>
      <field name="arch" type="xml">
        <form string="driving record from">
          <sheet>
            <div class="oe_title">
              <h1>Driving Record</h1>
            </div>
            <group>
              <group>
                <field name="employee_id"/>
                <field name="analytic_account_id"/>
              </group>
              <group>
                <field name="date_start"/>
                <field name="date_stop"/>
              </group>
            </group>
            <group>
              <field name="line_ids">
                <tree string="Driving Record" multi_edit="1" sample="1">
                  <field name="date"/>
                  <field name="type"/>
                  <field name="odoometer_start"/>
                  <field name="odoometer_stop"/>
                  <field name="length" readonly="True"/>
                </tree>
              </field>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record model="ir.ui.view" id="payroll_driving_record.line_list_view">
      <field name="name">payroll_driving_record line list</field>
      <field name="model">driving.record.line</field>
      <field name="arch" type="xml">
        <tree string="Driving Record" multi_edit="1" sample="1">
          <field name="date"/>
          <field name="type"/>
          <field name="length"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="payroll_driving_record.line_form_view">
      <field name="name">payroll_driving_record line form</field>
      <field name="model">driving.record.line</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <div class="oe_title">
              <h1>Driving Record</h1>
            </div>
            <group>
              <group>
              <field name="date"/>
              <field name="type"/>
              <field name="note"/>
              </group>
              <group>
              <field name="odoometer_start"/>
              <field name="odoometer_stop"/>
              <field name="length" readonly="True"/>
              </group>
            </group>
          </sheet>
        </form>
      </field>
    </record>


    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="payroll_driving_record.driving_record_action_window">
      <field name="name">payroll_driving_record driving record window</field>
      <field name="res_model">driving.record</field>
      <field name="view_mode">tree,form</field>
    </record>


